<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-md bg-dark navbar-dark">
            <a class="navbar-brand" href="http://localhost:51992/">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:51992/Bottoms/Index">Bottoms</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:51992/Tops/Index">Tops</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:51992/Shoes/Index">Shoes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:51992/Accessories/Index">Accessories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:51992/Account/Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:51992/Account/Login">Login</a>
                    </li>
                </ul>
                </div>
        </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
